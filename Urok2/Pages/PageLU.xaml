<Page x:Class="Urok2.Pages.PageLU"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Urok2.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageLU">

    <Grid>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center"
                    HorizontalAlignment="Center">
            <StackPanel Orientation="Vertical" Margin="0 0 10 0">
                <StackPanel Orientation="Horizontal" Margin="0 0 0 5">
                    <TextBlock Text="Введите А" FontSize="24" Width="120"/>
                    <TextBox Name="K" Width="100" Margin="5 0 0 0"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0 0 0 5">
                    <TextBlock Text="Введите А" FontSize="24" Width="120"/>
                    <TextBox Name="B" Width="100" Margin="5 0 0 0"/>
                </StackPanel>
                <Button Height="100" FontSize="44" Name="btn1" Content="Посчитать" Click="btn1_Click"/>
            </StackPanel>
            <TextBox Name="txbRes" Text="Результат вычислений" FontSize="24" Width="350" TextAlignment="Center"/>
        </StackPanel>
    </Grid>
</Page>
